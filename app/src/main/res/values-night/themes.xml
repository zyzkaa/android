<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Am_projekt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Główne kolory dla dark mode -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariantDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantDark</item>

        <!-- Tło, status bar, nawigacja -->
        <item name="background">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Teksty -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>

        <!-- Preferencje -->
        <item name="preferenceCategoryTitleTextColor">@color/primaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Custom.Dark</item>
    </style>

    <style name="PreferenceThemeOverlay.Custom.Dark" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorAccent">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
    </style>
</resources>
